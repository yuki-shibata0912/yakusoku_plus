<div class="container">
<h1>新規予約</h1>

<% if @reservation.errors.any? %>
  <div class="errors">
    <ul>
      <% @reservation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="form-card">
<%= form_with model: @reservation, local: true do |f| %>

  <div class="form-group">
    <%= f.label :date, "日付" %><br>
    <%= f.date_field :date, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :start_time, "開始" %><br>
    <%= f.time_field :start_time, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :end_time, "終了" %><br>
    <%= f.time_field :end_time, class: "form-control" %>
  </div>

  <div class="form-actions">
    <%= f.submit "登録", class: "btn btn-primary" %>
    <%= link_to "一覧へ戻る", reservations_path, class: "btn btn-secondary" %>
  </div>

<% end %>
 </div>
